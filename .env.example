# API Configuration
# Backend API base URL (default: http://localhost:8000/api)
VITE_API_URL=http://localhost:8000/api
# Increased timeout for AI response latency (30 seconds)
VITE_API_TIMEOUT=30000

# Session Management
# Enable session state polling for external process updates
VITE_ENABLE_SESSION_POLLING=true
# Session state poll interval in milliseconds (5 seconds)
VITE_SESSION_POLL_INTERVAL=5000

# File Upload Configuration
# Maximum file size in bytes (5MB)
VITE_MAX_FILE_SIZE=5242880
# Allowed file types for document upload
VITE_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png

# Payment Gateway
VITE_PAYMENT_GATEWAY_URL=https://sandbox.payment.com

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
# Toggle backend API integration (set to false to use local state only)
VITE_USE_BACKEND_API=true

# Environment
VITE_ENVIRONMENT=development
